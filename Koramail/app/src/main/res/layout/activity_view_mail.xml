<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/container_title_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="From"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/container_content_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="sample@sample.com"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/container_title_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Subject"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/container_content_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Sample Subject"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/container_title_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Content"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/container_content_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Sample Content"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/container_title_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:text="Attachment"
                android:textSize="20sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/container_content_attachment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:clickable="true"
                android:text="None"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/button_verify"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="#8BDADE"
                android:text="Verify"
                />

            <Button
                android:id="@+id/button_decrypt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:background="#8BDADE"
                android:text="DECRYPT"
                />

            <EditText
                android:id="@+id/container_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:ems="10"
                android:hint="(Optional) Key"
                android:inputType="textPersonName"
                />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>